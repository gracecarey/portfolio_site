<div class="hero">
  <div class="hero-inner">
    <div class="hero-copy">
      <h1><%=_("Grace Carey") %></h1>
      <p class="horizontal-decor"><i class="fa fa-cogs"></i></p>
      <p>
        <span><%=_("I'm a creative ")%></span>
        <span class="emphasis"><%=_("full-stack web developer ")%></span>
        <span><%=_("living in NYC.")%></span>
      </p>
      <p><%=_("This is a place for me to showcase some of my work.")%></p>
    </div>
  </div>
</div>

<ul class="portfolio-item-grid">
  <% for(var i=0; i<portfolio_items.length; i++) {%>
    <li class="block">
      <a href="/portfolio/<%= portfolio_items[i].slug %>">
        <img src="/images/<%= portfolio_items[i].thumb_url %>"
          alt="<%=portfolio_items[i].title%>"/>
        <div><%= portfolio_items[i].title %></div>
      </a>
    </li>
  <% } %>
</ul>
