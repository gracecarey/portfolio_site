<header>
    <a href="/">
      <h1><%=_("Grace Carey") %></h1>
    </a>
</header>

<ul class="breadcrumb">
  <li><a href="/">
    <i class="fa fa-home"></i> Home</a>
  </li>
  <li>
    Portfolio
  </li>
</ul>

<section class="portfolio-item">
  <div class="portfolio-item-meta panel">
    <h2 class="portfolio-item-title"><%= portfolio_item.title %></h2>
    <section>
      <p class="portfolio-item-description"><%=portfolio_item.description%></p>
    </section>
    <section>
      <div>
        <h3>Role:</h3>
        <ul class="portfolio-item-work-types">
          <% for(var i=0; i<portfolio_item.work_types.length; i++) {%>
          <li class="badge badge-type"><%= portfolio_item.work_types[i] %></li>
          <% } %>
        </ul>
      </div>
      <div>
        <h3>Tools:</h3>
        <ul class="portfolio-item-tools">
          <% for(var i=0; i<portfolio_item.tools.length; i++) {%>
          <li class="badge badge-tools"><%= portfolio_item.tools[i] %></li>
          <% } %>
        </ul>
      </div>
      <% if (portfolio_item.company){ %>
      <div>
        <h3>Work for:</h3>
        <p>
        <% if (portfolio_item.company_url){ %>
          <a href="<%= portfolio_item.company_url %>">
            <span><%= portfolio_item.company %></span>
          </a>
        <% } else { %>
          <span><%= portfolio_item.company %></span>
        <% } %>
        </p>
      </div>
      <% } %>
    </section>
  </div>
  <ul class="portfolio-item-images">
    <% for(var i=0; i<portfolio_item.image_urls.length; i++) {%>
    <li class="panel">
      <div class="img-container">
        <img src="/images/<%= portfolio_item.image_urls[i] %>"
        alt="<%= portfolio_item.image_urls[i] %>">
      </div>
    </li>
    <% } %>
  </ul>
  <% if (portfolio_item.youtube_url) { %>
    <div class="youtube-embed">
      <iframe width="420" height="315" src="<%= portfolio_item.youtube_url %>" frameborder="0" allowfullscreen></iframe>
    </div>
  <% } %>
</section>
